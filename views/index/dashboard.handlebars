<h1>Welcome {{user.firstName}}</h1>
<h4>Your stories</h4>

{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
      <tr>
        <td><a href="/stories/show/{{id}}">{{title}}</a></td>
        <td>{{formatDate date 'MMMM do YYYY'}}</td>
        <td><span class="dash-status">{{status}}</span></td>
        <td class="story-control">
          <a class="btn left-align" href="/stories/edit/{{id}}"> <i class="fa fa-pencil"></i> Edit</a>
          <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
            <button class="btn red" type="submit"><i class="fa fa-remove"></i> Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not created any stories yet</p>
{{/if}}
